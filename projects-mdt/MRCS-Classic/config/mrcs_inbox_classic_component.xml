<config version='1.0'>
   <scope>
   
      <component id="inboxclassic" extends="inboxclassic:webtop/config/inboxclassic_component.xml">

         <!-- Description (not NLS'd) -->
         <desc>
            This component allows for listing of the user?s inbox tasks. 
            It extends inboxlist adding user preference capability. 
            It has a classic-style layout.
         </desc>
         
         <pages>
            <start>/webtop/classic/inbox/inbox.jsp</start>
         </pages>

         <class>com.medtronic.documentum.mrcs.client.MrcsInboxClassic</class>

         <!-- Show attachment names -->
         <showattachmentinfo>false</showattachmentinfo>
         
         <!-- id of the task manager component accessible from inbox -->
         <taskmanagerid>taskmgrclassic</taskmanagerid>
         
         <!-- override show object type filters -->
         <showfilters>false</showfilters>
         
      </component>
      
   </scope>
   
</config>
